<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Metropolitan Events</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TicketHub.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    Metropolitan Events
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="Index">Events</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu shadow border-0" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="EventCategories" asp-action="Index">Categories</a></li>
                                    <li><a class="dropdown-item" asp-controller="Venues" asp-action="Index">Venues</a></li>
                                    <li><a class="dropdown-item" asp-controller="Events" asp-action="Index">Events</a></li>
                                    <li><a class="dropdown-item" asp-controller="Members" asp-action="Index">Members</a></li>
                                    <li><a class="dropdown-item" asp-controller="Bookings" asp-action="Index">Bookings</a></li>
                                    <li><a class="dropdown-item" asp-controller="TicketTypes" asp-action="Index">Ticket Types</a></li>
                                    <li><a class="dropdown-item" asp-controller="Inquiries" asp-action="Index">Inquiries</a></li>
                                </ul>
                            </li>
                        }
                        @if (User.IsInRole("Organizer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Events" asp-action="MyEvents">My Events</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                             <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Bookings" asp-action="Index">My Bookings</a>
                            </li>
                             <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="supportDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Support
                                </a>
                                <ul class="dropdown-menu shadow border-0" aria-labelledby="supportDropdown">
                                    <li><a class="dropdown-item" asp-controller="Inquiries" asp-action="Index">My Inquiries</a></li>
                                    <li><a class="dropdown-item" asp-controller="Inquiries" asp-action="Create">Contact Support</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-white py-1 mt-auto">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-1 text-dark fw-bold">&copy; 2026 Metropolitan Events</p>
                </div>
                <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-muted me-3 small">Privacy Policy</a>
                    <span class="text-muted small">|</span>
                    <span class="ms-3 small">Developed by Najath</span>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
