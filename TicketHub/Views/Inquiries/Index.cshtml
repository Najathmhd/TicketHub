@model IEnumerable<TicketHub.Models.Inquiry>

@{
    ViewData["Title"] = User.IsInRole("Admin") ? "Manage Inquiries" : "My Inquiries";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        @if (!User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> New Inquiry
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No inquiries found.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model.OrderByDescending(i => i.InquiryDate))
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100 border-0">
                        <div class="card-header d-flex justify-content-between align-items-center bg-white border-bottom-0 pt-3">
                            <span class="badge @(item.Status == "New" ? "bg-primary" : item.Status == "Responded" ? "bg-success" : "bg-secondary")">
                                @item.Status
                            </span>
                            <small class="text-muted">@item.InquiryDate?.ToShortDateString()</small>
                        </div>
                        <div class="card-body">
                            @if (User.IsInRole("Admin"))
                            {
                                <h6 class="card-subtitle mb-2 text-muted">From: @item.Member?.Email</h6>
                            }
                            <p class="card-text text-truncate-2" title="@item.Message">
                                @item.Message
                            </p>
                        </div>
                        <div class="card-footer bg-white border-top-0 pb-3">
                            <div class="d-flex justify-content-end gap-2">
                                <a asp-action="Details" asp-route-id="@item.InquiryId" class="btn btn-sm btn-outline-info">Details</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.InquiryId" class="btn btn-sm btn-outline-warning">Update Status</a>
                                }
                                <a asp-action="Delete" asp-route-id="@item.InquiryId" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        .text-truncate-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        .card { transition: transform 0.2s; }
        .card:hover { transform: translateY(-5px); }
    </style>
}
