@model TicketHub.Models.Inquiry

@{
    ViewData["Title"] = "Create";
}

<h1>Contact Support</h1>

<h4>Send us your inquiry</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Message" class="control-label">Your Message</label>
                <textarea asp-for="Message" class="form-control" rows="5" placeholder="How can we help you today?"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send Inquiry" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">My Inquiries</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
