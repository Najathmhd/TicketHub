@model TicketHub.Models.Inquiry

@{
    ViewData["Title"] = "Inquiry Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3">
                    <h4 class="mb-0">Inquiry #@Model.InquiryId</h4>
                    <span class="badge @(Model.Status == "New" ? "bg-primary" : Model.Status == "Responded" ? "bg-success" : "bg-secondary") p-2">
                        @Model.Status
                    </span>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold text-muted">Submitted By</div>
                        <div class="col-sm-9">@Model.Member?.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold text-muted">Date Sent</div>
                        <div class="col-sm-9">@Model.InquiryDate?.ToLongDateString()</div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.GuestEmail) && Model.GuestEmail != Model.Member?.Email)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3 fw-bold text-muted">Contact Email</div>
                            <div class="col-sm-9">@Model.GuestEmail</div>
                        </div>
                    }
                    <hr />
                    <div class="mt-4">
                        <h5 class="fw-bold mb-3">Message</h5>
                        <div class="bg-light p-4 rounded border">
                            @Model.Message
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-top-0 p-4 pt-0">
                    <div class="d-flex gap-2">
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.InquiryId" class="btn btn-warning">Update Status</a>
                        }
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <a asp-action="Delete" asp-route-id="@Model.InquiryId" class="btn btn-outline-danger ms-auto">Delete Inquiry</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
