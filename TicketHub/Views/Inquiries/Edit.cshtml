@model TicketHub.Models.Inquiry

@{
    ViewData["Title"] = "Edit";
}

<h1>Update Inquiry Status</h1>

<h4>Inquiry Details</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <div class="card mb-4 shadow-sm border-0 bg-light">
            <div class="card-body">
                <p><strong>From:</strong> @Model.Member?.Email</p>
                <p><strong>Date:</strong> @Model.InquiryDate?.ToLongDateString()</p>
                <p><strong>Message:</strong></p>
                <div class="bg-white p-3 border rounded mb-0">@Model.Message</div>
            </div>
        </div>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InquiryId" />
            
            <div class="form-group mb-4">
                <label asp-for="Status" class="control-label fw-bold"></label>
                <select asp-for="Status" class="form-select">
                    <option value="New">New</option>
                    <option value="Responded">Responded</option>
                    <option value="Closed">Closed</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Update Status" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
