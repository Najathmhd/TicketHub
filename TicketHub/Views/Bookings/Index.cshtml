@model IEnumerable<TicketHub.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<h1>My Bookings</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>Event</th>
            <th>Date</th>
            <th>Venue</th>
            <th>Total Amount</th>
            <th>Status</th>
            @if (User.IsInRole("Admin"))
            {
                <th>Member</th>
            }
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.EventDate)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Event.Venue.VenueName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingStatus)
            </td>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Member.FullName)
                </td>
            }
            <td>
                <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-sm btn-info">Details</a>
                @if (User.IsInRole("Admin") || item.BookingStatus != "Cancelled")
                {
                   // Logic for Cancellation could go here
                }
            </td>
        </tr>
}
    </tbody>
</table>
