@model TicketHub.Models.ViewModels.BookingCreateViewModel

@{
    ViewData["Title"] = "Book Event";
}

<h1>Book Event: @Model.EventTitle</h1>

<div>
    <h4>Event Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.EventDate</dd>
        <dt class="col-sm-2">Venue</dt>
        <dd class="col-sm-10">@Model.VenueName</dd>
    </dl>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EventId" />
            
            <div class="form-group mb-3">
                <label asp-for="SelectedTicketTypeId" class="control-label"></label>
                @if (Model.TicketTypes != null && Model.TicketTypes.Any())
                {
                    <select asp-for="SelectedTicketTypeId" class="form-select shadow-sm">
                        <option value="">-- Select Ticket Type --</option>
                        @foreach (var ticket in Model.TicketTypes)
                        {
                            <option value="@ticket.TicketTypeId">
                                @ticket.TypeName - $@ticket.Price (Available: @ticket.AvailableSeats)
                            </option>
                        }
                    </select>
                }
                else
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-times-circle me-2"></i> Tickets are not yet available for this event.
                    </div>
                    <select class="form-select" disabled>
                        <option>No tickets available</option>
                    </select>
                }
                <span asp-validation-for="SelectedTicketTypeId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" type="number" min="1" max="10" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                @if (Model.TicketTypes != null && Model.TicketTypes.Any())
                {
                    <input type="submit" value="Confirm Booking" class="btn btn-primary" />
                }
                else
                {
                    <input type="submit" value="Confirm Booking" class="btn btn-primary" disabled />
                }
                <a asp-controller="Events" asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
