@model TicketHub.Models.Event

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EventDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EventTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EventStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Venue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Venue.VenueId)
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
    {
         <a asp-controller="Bookings" asp-action="Create" asp-route-eventId="@Model?.EventId" class="btn btn-primary">Book Now</a>
    }
    else if (!User.Identity.IsAuthenticated)
    {
        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Login to Book</a>
    }
    @if (User.IsInRole("Admin") || User.IsInRole("Organizer"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.EventId" class="btn btn-warning">Edit</a>
    }
    <hr />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<div class="mt-5">
    <h3>Reviews</h3>
    <hr />
    
    @if (Model.Reviews != null && Model.Reviews.Any())
    {
        foreach (var review in Model.Reviews.OrderByDescending(r => r.ReviewDate))
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title text-primary">@review.Member?.Email</h5>
                        <span class="text-warning">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="fa@(i <= review.Rating ? "s" : "r") fa-star"></i>
                            }
                        </span>
                    </div>
                    <p class="card-text">@review.Comment</p>
                    <p class="card-text text-muted"><small>Reviewed on @review.ReviewDate?.ToLongDateString()</small></p>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-light border">
            <p class="mb-0 text-muted">No reviews yet for this event. Be the first to share your thoughts!</p>
        </div>
    }

    @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
    {
        <div class="mt-3">
            <a asp-controller="Reviews" asp-action="Create" asp-route-eventId="@Model.EventId" class="btn btn-outline-primary">
                <i class="fas fa-pencil-alt"></i> Leave a Review
            </a>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}
