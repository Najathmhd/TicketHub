@model TicketHub.Models.Event

@{
    ViewData["Title"] = "Details";
}

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger shadow-sm border-0 mb-4">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
        </div>
    }

    <div class="card shadow-sm border-0 rounded-3 mb-4">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">@Model.Title</h2>
                <span class="badge bg-light text-primary fs-6 px-3 py-2 rounded-pill shadow-sm">@Model.EventStatus</span>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-8">
                    <p class="lead text-muted mb-4">@Model.Description</p>
                    
                    <div class="row g-4 mb-4">
                        <div class="col-sm-6">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                                    <i class="fas fa-calendar-alt text-primary fa-lg"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Date & Time</small>
                                    <strong>@Model.EventDate?.ToLongDateString() at @Model.EventTime</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="d-flex align-items-center">
                                <div class="bg-info bg-opacity-10 p-3 rounded-circle me-3">
                                    <i class="fas fa-map-marker-alt text-info fa-lg"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Venue</small>
                                    <strong>@Model.Venue.VenueName</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="d-flex align-items-center">
                                <div class="bg-success bg-opacity-10 p-3 rounded-circle me-3">
                                    <i class="fas fa-tags text-success fa-lg"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Category</small>
                                    <strong>@Model.Category.CategoryName</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 border-start">
                    <div class="p-3">
                        <h4 class="mb-4">Tickets</h4>
                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                        {
                             <a asp-controller="Bookings" asp-action="Create" asp-route-eventId="@Model?.EventId" class="btn btn-primary btn-lg w-100 shadow-sm mb-3">
                                <i class="fas fa-ticket-alt me-2"></i> Book Tickets Now
                             </a>
                        }
                        else if (!User.Identity.IsAuthenticated)
                        {
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg w-100 shadow-sm mb-3">
                                <i class="fas fa-sign-in-alt me-2"></i> Login to Book
                            </a>
                        }
                        
                        @if (User.IsInRole("Admin") || User.IsInRole("Organizer"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model?.EventId" class="btn btn-outline-warning w-100 mb-2">
                                <i class="fas fa-edit me-2"></i> Edit Event
                            </a>
                        }
                        <a asp-action="Index" class="btn btn-outline-secondary w-100">
                            <i class="fas fa-arrow-left me-2"></i> Back to Events
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

<div class="mt-5">
    <h3>Reviews</h3>
    <hr />
    
    @if (Model.Reviews != null && Model.Reviews.Any())
    {
        foreach (var review in Model.Reviews.OrderByDescending(r => r.ReviewDate))
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title text-primary">@review.Member?.Email</h5>
                        <span class="text-warning">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="fa@(i <= review.Rating ? "s" : "r") fa-star"></i>
                            }
                        </span>
                    </div>
                    <p class="card-text">@review.Comment</p>
                    <p class="card-text text-muted"><small>Reviewed on @review.ReviewDate?.ToLongDateString()</small></p>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-light border">
            <p class="mb-0 text-muted">No reviews yet for this event. Be the first to share your thoughts!</p>
        </div>
    }

    @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
    {
        <div class="mt-3">
            <a asp-controller="Reviews" asp-action="Create" asp-route-eventId="@Model.EventId" class="btn btn-outline-primary">
                <i class="fas fa-pencil-alt"></i> Leave a Review
            </a>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}
