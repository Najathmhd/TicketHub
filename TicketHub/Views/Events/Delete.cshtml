@model TicketHub.Models.Event

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Event</h4>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger shadow-sm border-0">
            <i class="fas fa-exclamation-triangle me-2"></i> @ViewBag.ErrorMessage
        </div>
    }

    @if (ViewBag.HasTickets || ViewBag.HasBookings || ViewBag.HasReviews)
    {
        <div class="alert alert-warning shadow-sm border-0">
            <h4><i class="fas fa-exclamation-circle me-2"></i> Warning: Event has active dependencies</h4>
            <p>This event cannot be deleted because it is currently associated with:</p>
            <ul>
                @if (ViewBag.HasTickets) { <li><strong>Ticket Types:</strong> Prices and quantities defined for this event.</li> }
                @if (ViewBag.HasBookings) { <li><strong>Bookings:</strong> Customers have already purchased tickets.</li> }
                @if (ViewBag.HasReviews) { <li><strong>Reviews:</strong> Attendees have left feedback.</li> }
            </ul>
            <p class="mb-0">Please remove these dependencies before attempting to delete the event.</p>
        </div>
    }

    <dl class="row bg-light p-4 rounded shadow-sm mb-4">
        <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Title)</dt>
        <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.Title)</dd>

        <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Description)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.EventDate)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.EventDate) at @Html.DisplayFor(model => model.EventTime)</dd>

        <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.EventStatus)</dt>
        <dd class="col-sm-9">
            <span class="badge @(Model.EventStatus == "Active" ? "bg-success" : "bg-secondary")">@Html.DisplayFor(model => model.EventStatus)</span>
        </dd>

        <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Category)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.CategoryName)</dd>

        <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Venue)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Venue.VenueName)</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="EventId" />
        <button type="submit" class="btn btn-danger px-4" @(ViewBag.HasTickets || ViewBag.HasBookings || ViewBag.HasReviews ? "disabled" : "")>
            <i class="fas fa-trash-alt me-2"></i> Delete Event
        </button>
        <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}
