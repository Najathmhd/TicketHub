@model IEnumerable<TicketHub.Models.Event>

@{
    ViewData["Title"] = "My Events";
}

<h1>My Events</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Event</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.EventDate)</th>
            <th>@Html.DisplayNameFor(model => model.Venue)</th>
            <th>@Html.DisplayNameFor(model => model.EventStatus)</th>
            <th>Bookings</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Title)</td>
            <td>@Html.DisplayFor(modelItem => item.EventDate)</td>
            <td>@Html.DisplayFor(modelItem => item.Venue.VenueName)</td>
            <td>
                <span class="badge bg-@(item.EventStatus == "Active" ? "success" : "secondary")">
                    @Html.DisplayFor(modelItem => item.EventStatus)
                </span>
            </td>
            <td>
                @item.Bookings.Count()
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-sm btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
