@model TicketHub.Models.Booking

@{
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ticket #@Model.BookingId - TicketHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body { background-color: #f8f9fa; }
        .ticket {
            max-width: 800px;
            margin: 50px auto;
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            overflow: hidden;
            display: flex;
        }
        .ticket-left {
            flex: 2;
            padding: 30px;
            border-right: 2px dashed #ddd;
        }
        .ticket-right {
            flex: 1;
            padding: 30px;
            background: #f1f3f5;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
        }
        .event-title { font-size: 2rem; font-weight: bold; color: #333; }
        .event-info { font-size: 1.1rem; color: #666; margin-bottom: 20px; }
        .ticket-details { margin-top: 20px; }
        .ticket-type { font-weight: bold; color: #0d6efd; }
        #qrcode { margin-bottom: 20px; }
        @@media print {
            body { background: white; }
            .ticket { box-shadow: none; border: 1px solid #ddd; }
            .no-print { display: none; }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="ticket">
            <div class="ticket-left">
                <div class="event-title">@Model.Event.Title</div>
                <div class="event-info">
                    <i class="fas fa-calendar"></i> @Model.Event.EventDate?.ToString("MMMM dd, yyyy") at @Model.Event.EventTime <br />
                    <i class="fas fa-map-marker-alt"></i> @Model.Event.Venue.VenueName
                </div>
                
                <hr />
                
                <div class="ticket-details row">
                    <div class="col-md-6">
                        <small class="text-muted">Attendee</small>
                        <div>@Model.Member.FullName</div>
                    </div>
                    <div class="col-md-6">
                        <small class="text-muted">Booking Ref</small>
                        <div>#@Model.BookingId</div>
                    </div>
                </div>

                <div class="mt-4">
                    <h5>Tickets</h5>
                    <ul class="list-unstyled">
                        @foreach (var detail in Model.BookingDetails)
                        {
                            <li>
                                <span class="ticket-type">@detail.TicketType.TypeName</span> 
                                x @detail.Quantity
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="ticket-right">
                <div id="qrcode"></div>
                <small class="text-muted mb-3">Scan at entrance</small>
                <button onclick="window.print()" class="btn btn-primary no-print">Print Ticket</button>
            </div>
        </div>
        <div class="text-center mt-3 no-print">
            <a href="javascript:history.back()" class="btn btn-link">Back</a>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <script>
        new QRCode(document.getElementById("qrcode"), {
            text: "TicketHub-@Model.BookingId-@Model.MemberId",
            width: 128,
            height: 128
        });
    </script>
</body>
</html>
