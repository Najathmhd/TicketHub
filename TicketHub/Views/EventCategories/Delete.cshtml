@model TicketHub.Models.EventCategory

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>EventCategory</h4>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger shadow-sm border-0">
            <i class="fas fa-exclamation-triangle me-2"></i> @ViewBag.ErrorMessage
        </div>
    }

    @if (ViewBag.HasEvents)
    {
        <div class="alert alert-warning shadow-sm border-0">
            <h4><i class="fas fa-exclamation-circle me-2"></i> Warning: Category in Use</h4>
            <p class="mb-0">This category cannot be deleted because it is currently associated with one or more events. Please reassign or delete the associated events before attempting to delete this category.</p>
        </div>
    }

    <dl class="row bg-light p-4 rounded shadow-sm mb-4">
        <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.CategoryName)</dt>
        <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.CategoryName)</dd>
        
        <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Description)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        <button type="submit" class="btn btn-danger px-4" @(ViewBag.HasEvents ? "disabled" : "")>
            <i class="fas fa-trash-alt me-2"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}
