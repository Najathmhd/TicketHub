@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="h4 mb-0">Join TicketHub</h2>
                    <p class="mb-0 opacity-75">Create your account to start booking events</p>
                </div>
                <div class="card-body p-4 pt-5">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Input.FullName" class="form-control border-0 bg-light" autocomplete="name" aria-required="true" placeholder="John Doe" />
                            <label asp-for="Input.FullName" class="text-muted">Full Name</label>
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control border-0 bg-light" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="text-muted">Email Address</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Password" class="form-control border-0 bg-light" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.Password" class="text-muted">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.ConfirmPassword" class="form-control border-0 bg-light" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.ConfirmPassword" class="text-muted">Confirm Password</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-4 mb-3">
                            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary shadow-sm py-3 fw-bold">Create Account</button>
                        </div>
                        
                        <div class="text-center mt-4">
                            <p class="text-muted small mb-0">Already have an account?</p>
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-decoration-none">Sign In Instead</a>
                        </div>
                    </form>
                </div>
                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div class="card-footer bg-light p-4 border-top-0 text-center">
                        <p class="small text-muted mb-3">Or register with</p>
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-dark" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                        @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
