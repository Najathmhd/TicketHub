@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="h4 mb-0">Welcome Back</h2>
                    <p class="mb-0 opacity-75">Log in to your TicketHub account</p>
                </div>
                <div class="card-body p-4 pt-5">
                    <section>
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control border-0 bg-light" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label text-muted">Email Address</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control border-0 bg-light" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="form-label text-muted">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label asp-for="Input.RememberMe" class="form-check-label text-muted small">
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="small text-decoration-none">Forgot Password?</a>
                            </div>
                            
                            <div class="mb-3">
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary shadow-sm py-3 fw-bold">Sign In</button>
                            </div>
                            
                            <div class="text-center mt-4">
                                <p class="text-muted small mb-0">Don't have an account?</p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-decoration-none">Create a New Account</a>
                            </div>
                        </form>
                    </section>
                </div>
                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div class="card-footer bg-light p-4 border-top-0 text-center">
                        <p class="small text-muted mb-3">Or sign in with</p>
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-dark" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                         @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    </div>
                }
            </div>
            
            <div class="text-center mt-4">
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-muted small text-decoration-none">Resend email confirmation</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
